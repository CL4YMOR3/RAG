# =============================================================================
# NEXUS RAG - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in the values

# -----------------------------------------------------------------------------
# PostgreSQL (Neon or Local)
# -----------------------------------------------------------------------------
# For Neon Cloud: postgresql://user:password@host/database?sslmode=require
# For Docker local: postgresql://nexus:nexus_secure_password@postgres:5432/nexus_rag
DATABASE_URL=postgresql://nexus:nexus_secure_password@postgres:5432/nexus_rag

# Password for local PostgreSQL container
POSTGRES_PASSWORD=nexus_secure_password

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
REDIS_URL=redis://redis:6379
REDIS_SESSION_TTL=86400      # 24 hours
REDIS_CACHE_TTL=604800       # 7 days

# -----------------------------------------------------------------------------
# Qdrant
# -----------------------------------------------------------------------------
QDRANT_HOST=qdrant
QDRANT_PORT=6333
# For Qdrant Cloud (optional):
# QDRANT_URL=https://your-cluster.qdrant.io
# QDRANT_API_KEY=your-api-key

# -----------------------------------------------------------------------------
# LLM Configuration
# -----------------------------------------------------------------------------
LLM_MODEL_PATH=SLM/Qwen2.5-3B-Instruct/Qwen2.5-3B-Instruct-Q4_K_M.gguf
CONTEXT_WINDOW=4096          # 4096 for 4GB VRAM, 8192 for 8GB+
MAX_NEW_TOKENS=2048
N_GPU_LAYERS=-1              # -1 = all layers on GPU

# -----------------------------------------------------------------------------
# API Keys (Optional)
# -----------------------------------------------------------------------------
# For RAGAS evaluation with Mistral
MISTRAL_API_KEY=your-mistral-api-key
